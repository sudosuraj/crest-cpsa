{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "script"
    },
    "globals": {
        "CONFIG": "readonly",
        "DBUtils": "readonly",
        "RAG": "readonly",
        "QuizDataLoader": "readonly"
    },
    "rules": {
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "no-console": "off",
        "semi": ["error", "always"],
        "quotes": ["warn", "single", { "avoidEscape": true }],
        "indent": ["warn", 4],
        "no-trailing-spaces": "warn",
        "eol-last": ["warn", "always"],
        "no-multiple-empty-lines": ["warn", { "max": 2 }],
        "comma-dangle": ["warn", "never"],
        "no-undef": "error",
        "eqeqeq": ["warn", "always"],
        "curly": ["warn", "all"],
        "brace-style": ["warn", "1tbs"],
        "no-var": "warn",
        "prefer-const": "warn"
    }
}
